# ==========================================
# DATABASE (Neon)
# ==========================================
DATABASE_URL=postgresql://user:pass@host/fandreams?sslmode=require

# ==========================================
# REDIS (Upstash)
# ==========================================
UPSTASH_REDIS_REST_URL=https://...
UPSTASH_REDIS_REST_TOKEN=...

# ==========================================
# AUTH
# ==========================================
JWT_SECRET=your-jwt-secret-min-32-chars
JWT_REFRESH_SECRET=your-refresh-secret-min-32-chars

# ==========================================
# CLOUDFLARE R2
# ==========================================
R2_ACCOUNT_ID=
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_BUCKET_NAME=fandreams-media
R2_PUBLIC_URL=https://media.fandreams.app

# ==========================================
# BUNNY STREAM
# ==========================================
BUNNY_API_KEY=
BUNNY_LIBRARY_ID=
BUNNY_CDN_HOSTNAME=
BUNNY_TOKEN_AUTH_KEY=

# ==========================================
# EFI PAY / PIX (formerly Gerencianet)
# ==========================================
EFI_CLIENT_ID=
EFI_CLIENT_SECRET=
EFI_PIX_KEY=
EFI_CERTIFICATE_BASE64=
EFI_SANDBOX=true

# ==========================================
# MERCADOPAGO
# ==========================================
MERCADOPAGO_ACCESS_TOKEN=
MERCADOPAGO_PUBLIC_KEY=
MERCADOPAGO_WEBHOOK_SECRET=
MERCADOPAGO_SANDBOX=true

# ==========================================
# NOWPAYMENTS (Crypto)
# ==========================================
NOWPAYMENTS_API_KEY=
NOWPAYMENTS_IPN_SECRET=
NOWPAYMENTS_SANDBOX=true

# ==========================================
# PAYPAL
# ==========================================
PAYPAL_CLIENT_ID=
PAYPAL_CLIENT_SECRET=
PAYPAL_SANDBOX=true

# ==========================================
# SIGHTENGINE (Content Moderation)
# ==========================================
SIGHTENGINE_API_USER=
SIGHTENGINE_API_SECRET=

# ==========================================
# EMAIL (Resend)
# ==========================================
RESEND_API_KEY=
EMAIL_FROM=FanDreams <noreply@fandreams.app>

# ==========================================
# MONITORING
# ==========================================
SENTRY_DSN=
NEXT_PUBLIC_POSTHOG_KEY=

# ==========================================
# APP
# ==========================================
NODE_ENV=development
API_URL=http://localhost:3001
NEXT_PUBLIC_API_URL=http://localhost:3001
# API_URL is used for webhook notification URLs sent to payment providers.
# In production, set this to your public API URL (e.g., https://api.fandreams.app)
# For local development with ngrok: API_URL=https://your-ngrok-url.ngrok-free.app
NEXT_PUBLIC_APP_URL=http://localhost:3000
PLATFORM_FEE_PERCENT=12
FANCOIN_RATE=100
